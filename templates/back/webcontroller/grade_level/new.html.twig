{% extends 'base.html.twig' %}
{% block title %} Jessica Total Wellness Concept - Enregistrement d'un nouveau grade {% endblock %}
{% block page_title %} Enregistrement d'un nouveau grade {% endblock %}
{% block main %}
    <div class="col-lg-12">
        <div class="form-panel">
		    {% for type, messages in app.session.flashbag.all() %}
                {% for message in messages %}
                    <div class="alert alert-{{type}}">{{message}}</div>
                {% endfor %}
            {% endfor %}
            {{ form_start(form, {attr: {'novalidate': 'novalidate', 'id': 'form', 'class': 'form-horizontal style-form'}}) }}
            <!-- progressbar -->
            <ul id="progressbar">
                <li class="active">Step 1: Informations sur le niveau associé à un grade</li>
                <li>Step 2: Bonus générationnel</li>
            </ul>
            <fieldset>
                <h2 class="fs-title">Step 1: Informations sur le niveau associé à un grade</h2>
                <div class="form-group">
                    {{ form_label(form.grade, null, { 'label_attr':  {
                        'class': 'col-lg-3 control-label'
                    }}) }}
                    <div class="col-lg-9">
                        {{ form_errors(form.grade) }}
                        {{ form_widget(form.grade, { 'attr':  {
                            'class': 'form-control'
                        }}) }}
                    </div>
                </div>
                <div class="form-group">
                    {{ form_label(form.lvl, null, { 'label_attr':  {
                        'class': 'col-lg-3 control-label'
                    }}) }}
                    <div class="col-lg-9">
                        {{ form_errors(form.lvl) }}
                        {{ form_widget(form.lvl, { 'attr':  {
                            'class': 'form-control'
                        }}) }}
                    </div>
                </div>
                <input type="button" name="previous" class="previous action-button" value="Précédent" />
                <input type="button" name="next" class="next action-button" value="Suivant" />            </fieldset>
            <fieldset>
                <h2 class="fs-title">Step 2: Bonus générationnel</h2>
                <div id="bg-fields-list"
                     class="form-row"
                     data-prototype="{{ form_widget(form.bgs.vars.prototype)|e }}">
                </div>
                <button style="margin-top: 20px;" type="button"
                        class="add-bg"
                        data-list-selector="#bg-fields-list"><i class="fa fa-plus"></i></button>
                <input type="button" name="previous" class="previous action-button" value="Précédent" />
                <input type="submit" name="submit" class="submit action-button" value="Enregistrer" />
            </fieldset>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('fieldset') }}
    {{ encore_entry_script_tags('add_bg') }}
{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('fieldset') }}
{% endblock %}