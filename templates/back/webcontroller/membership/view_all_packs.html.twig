{% extends 'base.html.twig' %}
{% block title %}
	Jessica Total Wellness Concept - Nos packs de souscriptions
{% endblock %}

{% block page_title %}
	Nos packs de souscriptions 
{% endblock %}

{% block main %}
	<div class="col-lg-12">
        {% for type, messages in app.session.flashbag.all() %}
            {% for message in messages %}
                <div class="alert alert-{{type}}">{{message}}</div>
            {% endfor %}
        {% endfor %}
        {% for membership in memberships %}
            {% if membership.membershipCost > 0 %}
            <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
            <div class="custom-box">
                <div class="servicetitle">
                <h4>{{ membership.name }}</h4>
                <hr>
                </div>
                <div class="icn-main-container">
                <span class="icn-container">{{ membership.membershipCost|number_format(2, ',', ' ') }}XAF</span>
                </div>
                <p>{{ membership.description }}</p>
                <ul class="pricing">
                <li>Sponsoring : {{ membership.membershipBonusBinairePourcent|number_format(2, ',', ' ') }} % </li>
                <li>Binaire : {{ membership.membershipGroupeSV|number_format(2, ',', ' ') }} SV</li>
                <li>Quote produit : {{ membership.membershipProductCote|number_format(2, ',', ' ') }} </li>
                </ul>
                {% if is_granted('add_member') %}
                    <a class="btn btn-info" href="{{ path('add_user_quickly', {'code': membership.code}) }}" style="margin-left: -10px; font-weight: bold;">Enregistrer un nouveau distributeur</a><br /><br />
                {% endif %}
                <a class="btn btn-warning" href="#" style="font-weight: bold; ">Générer le lien de souscription</a><br /><br />
                {% if membership.coefficent > app.user.membership.coefficent %}
                    <button type="button" class="btn btn-danger btn-xs" title="Delete" data-toggle="modal" data-target="#membershipDialog{{membership.id}}">
                        <span class="fa fa-shopping-cart"></span>  Changer votre pack de souscription
                    </button>
                    <div class="modal fade" id="membershipDialog{{membership.id}}" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                                    <h4 class="modal-title" id="myModalLabel">Confirmation requise</h4>
                                </div>
                                <div class="modal-body">
                                    Voulez vous vraiment changer de pack de souscription ?
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-default" data-dismiss="modal">Abandonner</button>
                                    <form action="{{ path('membership_upgrade', {'code': membership.code}) }}" method="post">
                                        <input type="hidden" name="_method" value="POST">
                                        <input type="hidden" name="_jtwc_membership_upgrade_token" value="{{ csrf_token('jtwc_membership-upgrade'~membership.id) }}"/>
                                        <button type="submit" class="btn btn-danger">Confirmer</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>                 
                {% endif %}
            </div>
            <!-- end custombox -->
            </div>                                
            {% endif %}
        {% endfor %}
	</div>
{% endblock %}