{% extends 'base.html.twig' %}
{% block title %} Jessica Total Wellness Concept - Enregistrement d'un nouveau package {% endblock %}
{% block page_title %} Enregistrement d'un nouveau package {% endblock %}
{% block main %}
    <div class="col-lg-12">
        <div class="form-panel">
            {% for type, messages in app.session.flashbag.all() %}
                {% for message in messages %}
                    <div class="alert alert-{{type}}">{{message}}</div>
                {% endfor %}
            {% endfor %}
            {{ form_start(form, {attr: {'novalidate': 'novalidate', 'id': 'form', 'class': 'form-horizontal style-form'}}) }}
            <!-- progressbar -->
            <ul id="progressbar">
                <li class="active">Step 1: Pack de souscription</li>
                <li>Step 2: Informations additionnelles du pack</li>
            </ul>
            <fieldset>
                <h2 class="fs-title">Step 1: Pack de souscription</h2>
                <div class="form-group">
                    {{ form_label(form.code, null, { 'label_attr':  {
                        'class': 'col-lg-3 control-label'
                    }}) }}
                    <div class="col-lg-9">
                        {{ form_errors(form.code) }}
                        {{ form_widget(form.code, { 'attr':  {
                            'class': 'form-control'
                        }}) }}
                    </div>
                </div>
                <div class="form-group">
                    {{ form_label(form.name, null, { 'label_attr':  {
                        'class': 'col-lg-3 control-label'
                    }}) }}
                    <div class="col-lg-9">
                        {{ form_errors(form.name) }}
                        {{ form_widget(form.name, { 'attr':  {
                            'class': 'form-control'
                        }}) }}
                    </div>
                </div>
                <div class="form-group">
                    {{ form_label(form.coefficent, null, { 'label_attr':  {
                        'class': 'col-lg-3 control-label'
                    }}) }}
                    <div class="col-lg-9">
                        {{ form_errors(form.coefficent) }}
                        {{ form_widget(form.coefficent, { 'attr':  {
                            'class': 'form-control'
                        }}) }}
                    </div>
                </div>
                <div class="form-group">
                    {{ form_label(form.description, null, { 'label_attr':  {
                        'class': 'col-lg-3 control-label'
                    }}) }}
                    <div class="col-lg-9">
                        {{ form_errors(form.description) }}
                        {{ form_widget(form.description, { 'attr':  {
                            'class': 'form-control'
                        }}) }}
                    </div>
                </div>
                <input type="button" name="next" class="next action-button" value="Suivant" />
            </fieldset>
            <fieldset>
                <h2 class="fs-title">Step 2: Informations additionnelles du pack</h2>
                <div class="form-group">
                    {{ form_label(form.membershipCost, null, { 'label_attr':  {
                        'class': 'col-lg-3 control-label'
                    }}) }}
                    <div class="col-lg-9">
                        {{ form_errors(form.membershipCost) }}
                        {{ form_widget(form.membershipCost, { 'attr':  {
                            'class': 'form-control'
                        }}) }}
                    </div>
                </div>
                <div class="form-group">
                    {{ form_label(form.membershipGroupeSV, null, { 'label_attr':  {
                        'class': 'col-lg-3 control-label'
                    }}) }}
                    <div class="col-lg-9">
                        {{ form_errors(form.membershipGroupeSV) }}
                        {{ form_widget(form.membershipGroupeSV, { 'attr':  {
                            'class': 'form-control'
                        }}) }}
                    </div>
                </div>
                <div class="form-group">
                    {{ form_label(form.membershipProductCote, null, { 'label_attr':  {
                        'class': 'col-lg-3 control-label'
                    }}) }}
                    <div class="col-lg-9">
                        {{ form_errors(form.membershipProductCote) }}
                        {{ form_widget(form.membershipProductCote, { 'attr':  {
                            'class': 'form-control'
                        }}) }}
                    </div>
                </div>
                <div class="form-group">
                    {{ form_label(form.membershipBonusBinairePourcent, null, { 'label_attr':  {
                        'class': 'col-lg-3 control-label'
                    }}) }}
                    <div class="col-lg-9">
                        {{ form_errors(form.membershipBonusBinairePourcent) }}
                        {{ form_widget(form.membershipBonusBinairePourcent, { 'attr':  {
                            'class': 'form-control'
                        }}) }}
                    </div>
                </div>
                <input type="button" name="previous" class="previous action-button" value="Précédent" />
                <input type="submit" name="submit" class="submit action-button" value="Submit" />
            </fieldset>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('fieldset') }}
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('fieldset') }}
{% endblock %}
