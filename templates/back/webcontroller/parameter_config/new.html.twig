{% extends 'base.html.twig' %}
{% block title %} JTWC - Enregistrement d'un parmètre de configuration {% endblock %}
{% block page_title %} Enregistrement d'un parmètre de configuration {% endblock %}
{% block main %}
    <div class="col-lg-12">
        <div class="form-panel">
		    {% for type, messages in app.session.flashbag.all() %}
                {% for message in messages %}
                    <div class="alert alert-{{type}}">{{message}}</div>
                {% endfor %}
            {% endfor %}
            {{ form_start(form, {attr: {'id': 'form', 'class': 'form-horizontal style-form'}}) }}
            <div class="form-group">
                {{ form_label(form.name, null, { 'label_attr':  {
                    'class': 'col-lg-3 control-label'
                }}) }}
                <div class="col-lg-9">
                    {{ form_errors(form.name) }}
                    {{ form_widget(form.name, { 'attr':  {
                        'class': 'form-control'
                    }}) }}
                </div>
            </div>
            <div class="form-group">
                {{ form_label(form.value, null, { 'label_attr':  {
                    'class': 'col-lg-3 control-label'
                }}) }}
                <div class="col-lg-9">
                    {{ form_errors(form.value) }}
                    {{ form_widget(form.value, { 'attr':  {
                        'class': 'form-control'
                    }}) }}
                </div>
            </div>
            <div class="form-group">
                <div class="col-lg-offset-8 col-lg-2">
                    <input type="submit" name="submit" class="btn btn-theme" value="Submit" />
                </div>                
            </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('validate') }}
{% endblock %}
