{% extends 'base.html.twig' %}
{% block title %} Jessica Total Wellness Concept - Paramètres de configuration de la plateforme {% endblock %}
{% block page_title %} Paramètres de configuration de la plateforme {% endblock %}
{% block main %}
    <div class="col-lg-12">
        <div class="content-panel">
		    {% for type, messages in app.session.flashbag.all() %}
                {% for message in messages %}
                    <div class="alert alert-{{type}}">{{message}}</div>
                {% endfor %}
            {% endfor %}
			<h4>
                {% if app.user and is_granted('IS_AUTHENTICATED_FULLY') and (is_granted('ROLE_JTWC_ADMIN') or is_granted('ROLE_JTWC_USER_SECRET')) %}
                    <a href="{{ path('parameter_config_new') }}"><button type="button" class="btn btn-primary"><span class="fa fa-plus-circle"></span>Ajouter un paramètre</button></a>
                {% endif %}
            </h4>         
            <section id="unseen">
                <table class="display table table-bordered table-condensed" id="table-info">
                    <thead>
                    <tr>
                        <th>Paramètres</th>
                        <th>Valeur</th>
                        <th>Etat</th>
                        {% if app.user and is_granted('IS_AUTHENTICATED_FULLY') and is_granted('ROLE_JTWC_ADMIN') %}
                            <th>Actions</th>
                        {% endif %}
                    </tr>
                    </thead>
                    <tbody>
                    {% for param in params %}
                        <tr>
                            <td>{{ param.name }}</td>
                            <td>{{ param.value }}</td>
                            <td>{% if param.status == true %} Activé {% else %} Désactivé {% endif %}</td>
                            {% if app.user and is_granted('IS_AUTHENTICATED_FULLY') and is_granted('ROLE_JTWC_ADMIN') %}
                            <td>
                                <button type="button" class="btn btn-danger btn-xs" title="Delete" data-toggle="modal" data-target="#paramaterDeleteDialog{{param.id}}"><span class="fa fa-remove"></span>
                                </button>
                                <div class="modal fade" id="parameterDeleteDialog{{param.id}}" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                                    <div class="modal-dialog">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                                                <h4 class="modal-title" id="myModalLabel">Confirmation needed</h4>
                                            </div>
                                            <div class="modal-body">
                                                Voulez vous vraiment supprimer ce paramètre de configuration ?
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-default" data-dismiss="modal">Abandonner</button>
                                                <form action="{{ path('parameter_config_delete', {'id': param.id }) }}" method="post">
                                                    <button type="button" class="btn btn-danger">Confirmer</button>
                                                    <input type="hidden" name="_jtwc_parameter_config_token"  value="{{ csrf_token('jtwc_parameter_config-delete'~param.id) }}" />
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </td>
                            {% endif %}
                        </tr>
                    {% else %}
                        <tr><td {% if app.user and is_granted('IS_AUTHENTICATED_FULLY') and is_granted('ROLE_JTWC_ADMIN') %} colspan="3" {% else %} colspan="2" {% endif %}>Aucun paramètre de configuration disponible pour l'instant</td></tr>
                    {% endfor %}
                    </tbody>
                </table>
            </section>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('datatable') }}
{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('datatable') }}
{% endblock %}