{% extends 'base.html.twig' %}
{% block title %}
	Jessica Total Wellness Concept - Indirect bonus : du réseau
{% endblock %}

{% block page_title %}
	Indirect bonus : du réseau
{% endblock %}

{% block main %}
	<div class="col-lg-12">
	    <div class="form-panel">
            <form class="form-inline" role="form" style="margin: 30px 0;">
                <div class="form-group">
                    {{ form_widget(form.period) }}
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Afficher</button>
                </div>
            </form>
        </div>
		<div class="content-panel">
			<section id="unseen">
				<table class="table table-bordered table-striped table-condensed">
					<thead>
						<tr>
							<th>Nom</th>
							<th>Montant total</th>
						</tr>
					</thead>
					<tbody>
						{% for resultSVPurchase in results %}
                           <tr>
                                <td>
                                    {{ resultSVPurchase['nom'] }}
                                </td>
                                <td>
                                    {{ resultSVPurchase['total_indirect_bonus'] }}
                                </td>
                            </tr>  
						{% else %}
                            <tr>
                                <td colspan="3">Aucun bonus pour l'instant</td>
                            </tr>
						{% endfor %}
					</tbody>
				</table>
			</section>
		</div>
	</div>
{% endblock %}