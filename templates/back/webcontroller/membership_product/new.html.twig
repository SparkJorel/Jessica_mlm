{% extends 'base.html.twig' %}
{% block title %} JTWC - Paramétrer la quantité de ce produit pour le pack sélectionné {% endblock %}
{% block page_title %} Paramétrer la quantité de ce produit pour le pack sélectionné {% endblock %}
{% block main %}
    <div class="col-lg-12">
        <div class="form-panel">
            {{ form_start(form, {attr: {'id': 'form', 'class': 'form-horizontal style-form'}}) }}
            <div class="form-group">
                {{ form_label(form.name, null, { 'label_attr':  {
                    'class': 'col-lg-2 control-label'
                }}) }}
                <div class="col-lg-10">
                    {{ form_widget(form.name, { 'attr':  {
                        'class': 'form-control'~(form.name.vars.valid ? '' : ' is-invalid')
                    }}) }}
                    <div class"invalid-feedback">
                        {{ form_errors(form.name) }}
                    </div>
                </div>
            </div>
            <div class="form-group">
                {{ form_label(form.product, null, { 'label_attr':  {
                    'class': 'col-lg-2 control-label'
                }}) }}
                <div class="col-lg-10">
                    {{ form_widget(form.product, { 'attr':  {
                        'class': 'form-control'~(form.product.vars.valid ? '' : ' is-invalid')
                    }}) }}
                    <div class="invalid-feedback">
                        {{ form_errors(form.product) }}                    
                    </div>
                </div>
            </div>
            <div class="form-group">
                {{ form_label(form.quantity, null, { 'label_attr':  {
                    'class': 'col-lg-2 control-label'
                }}) }}
                <div class="col-lg-10">
                    {{ form_widget(form.quantity, { 'attr':  {
                        'class': 'form-control'~(form.quantity.vars.valid ? '' : ' is-invalid')
                    }}) }}
                    <div class="invalid-feedback">
                        {{ form_errors(form.quantity) }}                    
                    </div>
                </div>
            </div>            
            <div class="form-group">
                <div class="col-lg-offset-10 col-lg-2">
                    <input type="submit" name="submit" class="btn btn-theme" value="Enregistrer" />
                </div>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}

