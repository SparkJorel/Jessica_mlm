{% extends 'base.html.twig' %}
{% block title %} Jessica Total Wellness Concept - Clôturer un cycle {% endblock %}
{% block page_title %} Clôturer un cycle {% endblock %}
{% block main %}
    <div class="col-lg-12 mt">
        <div class="row content-panel">
            <div class="panel-heading">
                <ul class="nav nav-tabs nav-justified">
                    <li class="active">
                        <a data-toggle="tab" href="#opened">Cycle à cloturer</a>
                    </li>
                    <li>
                        <a data-toggle="tab" href="#closed">Cycle clos</a>
                    </li>                    
                </ul>
                <div class="panel-body">
                    <div class="tab-content">
                        <div id="opened" class="tab-pane active">
                            <div class="row">
                                <div class="col-lg-12">
                                    <section>
                                        <table class="display table table-bordered">
                                            <thead>
                                            <tr>
                                                <th>Id</th>
                                                <th>Début</th>
                                                <th>Fin</th>
                                                <th>Status</th>
                                                {% if app.user and is_granted('IS_AUTHENTICATED_FULLY') and (is_granted('ROLE_JTWC_ADMIN') or is_granted('ROLE_JTWC_USER_SECRET')) %}
                                                    <th>Actions</th>
                                                {% endif %}
                                            </tr>
                                            </thead>
                                            <tbody>
                                            {% for cycle in cycles if not cycle.closed %}
                                                <tr>
                                                    <td>{{ cycle.id }}</td>
                                                    <td>{{ cycle.startedAt|date('d/m/Y H:i:s') }}</td>
                                                    <td>{{ cycle.endedAt|date('d/m/Y H:i:s') }}</td>
                                                    <td>{% if cycle.active %} OUI {% else %} NON {% endif %}</td>
                                                    {% if app.user and is_granted('IS_AUTHENTICATED_FULLY') and (is_granted('ROLE_JTWC_ADMIN') or is_granted('ROLE_JTWC_USER_SECRET')) %}
                                                        <td>
                                                            {% if not cycle.closed %}
                                                                <a href="{{ path('close_cycle', {'id': cycle.id})}}" title="Close Cycle" class="btn btn-info btn-xs"><span class="fa fa-window-close"></span></a>
                                                            {% endif %}
                                                        </td>
                                                    {% endif %}
                                                </tr>
                                            {% endfor %}
                                            </tbody>
                                        </table>
                                    </section>
                                </div>
                            </div>
                        </div>
                        <div id="closed" class="tab-pane">
                            <div class="row">
                                <div class="col-lg-12">
                                    <section>
                                        <table class="display table table-bordered">
                                            <thead>
                                            <tr>
                                                <th>Id</th>
                                                <th>Début</th>
                                                <th>Fin</th>
                                                <th>Status</th>
                                                {% if app.user and is_granted('IS_AUTHENTICATED_FULLY') and is_granted('ROLE_JTWC_ADMIN') %}
                                                    <th>Actions</th>
                                                {% endif %}
                                            </tr>
                                            </thead>
                                            <tbody>
                                            {% for cycle in cycles if cycle.closed %}
                                                <tr>
                                                    <td>{{ cycle.id }}</td>
                                                    <td>{{ cycle.startedAt|date('d/m/Y H:i:s') }}</td>
                                                    <td>{{ cycle.endedAt|date('d/m/Y H:i:s') }}</td>
                                                    <td>{% if cycle.active %} OUI {% else %} NON {% endif %}</td>
                                                    {% if app.user and is_granted('IS_AUTHENTICATED_FULLY') and (is_granted('ROLE_JTWC_ADMIN') or is_granted('ROLE_JTWC_USER_SECRET')) %}
                                                        <td>
                                                            {% if not cycle.closed %}
                                                                <a href="{{ path('close_cycle', {'id': cycle.id})}}" title="Close Cycle" class="btn btn-info btn-xs"><span class="fa fa-window-close"></span></a>
                                                            {% endif %}
                                                        </td>
                                                    {% endif %}
                                                </tr>
                                            {% endfor %}
                                            </tbody>
                                        </table>
                                    </section>
                                </div>
                            </div>                        
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
