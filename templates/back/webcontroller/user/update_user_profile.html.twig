<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="JTWC">
    <meta name="keyword" content="JTWC, MLM">
    <title>Jessica Total Wellness Concept - Enregistrement d'un nouvel utilisateur</title>
    <!-- Favicons -->
    <link href="{{ asset('img/favicon.png') }}" rel="icon">
    <link href="{{ asset('img/apple-touch-icon.png') }}" rel="apple-touch-icon">
    {% block stylesheets %}
    {{ encore_entry_link_tags('app') }}
    {{ encore_entry_link_tags('autocomplete') }}
    {{ encore_entry_link_tags('fieldset') }}
    {% endblock %}
</head>
<body>
  <div id="login-page">
    <div class="container">
        <h3><i class="fa fa-angle-right"> Enregistrement d'un nouvel utilisateur </i></h3>
        <div class="row">
            <div class="col-lg-12">
                <div class="form-panel">
                    <div class="alert alert-success hide"></div>
                    {{ form_start(form, {attr: {'novalidate': 'novalidate', 'id': 'form', 'class': 'form-horizontal style-form'}}) }}
                    <!-- progressbar -->
                    <ul id="progressbar">
                        <li class="active">Informations personnelles</li>
                        <li>Addresse</li>
                        <li>Choix du pack</li>
                    </ul>
                    <fieldset>
                        <h2 class="fs-title">Informations personnelles</h2>
                        <div class="form-group">
                            {{ form_label(form.title, null, { 'label_attr':  {
                                'class': 'col-lg-3 control-label'
                            }}) }}
                            <div class="col-lg-9">
                                {{ form_widget(form.title, { 'attr':  {
                                    'class': 'form-control' ~ (form.title.vars.valid ? '' : ' is-invalid')
                                }}) }}
                                <div class="invalid-feedback">
                                    {{ form_errors(form.title) }}
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            {{ form_label(form.fullname, null, { 'label_attr':  {
                                'class': 'col-lg-3 control-label'
                            }}) }}

                            <div class="col-lg-9">
                                {{ form_widget(form.fullname, { 'attr':  {
                                    'class': 'form-control' ~ (form.fullname.vars.valid ? '' : ' is-invalid' )
                                }}) }}
                                <div class="invalid-feedback">
                                    {{ form_errors(form.fullname) }}
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                                {{ form_label(form.dateOfBirth, null, { 'label_attr':  {
                                    'class': 'col-lg-3 control-label'
                                }}) }}
                            <div class="col-lg-9">
                                {{ form_widget(form.dateOfBirth, { 'attr':  {
                                    'class': 'form-control' ~ (form.dateOfBirth.vars.valid ? '' : ' is-invalid')
                                }}) }}
                                <div class="invalid-feedback">
                                    {{ form_errors(form.dateOfBirth) }}
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                                {{ form_label(form.gender, null, { 'label_attr':  {
                                    'class': 'col-lg-3 control-label'
                                }}) }}
                            <div class="col-lg-9">
                                {{ form_widget(form.gender, { 'attr':  {
                                    'class': 'form-control' ~ (form.gender.vars.valid ? '' : ' is-invalid')
                                }}) }}
                                <div class="invalid-feedback">
                                    {{ form_errors(form.gender) }}
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                                {{ form_label(form.documentType, null, { 'label_attr':  {
                                    'class': 'col-lg-3 control-label'
                                }}) }}
                            <div class="col-lg-9">
                                {{ form_widget(form.documentType, { 'attr':  {
                                    'class': 'form-control' ~ (form.documentType.vars.valid ? '' : ' is-invalid')
                                }}) }}
                                <div class="invalid-feedback">
                                    {{ form_errors(form.documentType) }}
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                                {{ form_label(form.cni, null, { 'label_attr':  {
                                    'class': 'col-lg-3 control-label'
                                }}) }}
                            <div class="col-lg-9">
                                {{ form_widget(form.cni, { 'attr':  {
                                    'class': 'form-control' ~ (form.cni.vars.valid ? '' : ' is-invalid')
                                }}) }}
                                <div class="invalid-feedback">
                                    {{ form_errors(form.cni) }}
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                                {{ form_label(form.imageFile, null, { 'label_attr':  {
                                    'class': 'col-lg-3 control-label'
                                }}) }}
                            <div class="col-lg-9">
                                {{ form_errors(form.imageFile) }}
                                {{ form_widget(form.imageFile, { 'attr':  {
                                    'class': 'form-control'
                                }}) }}
                            </div>
                        </div>
                        <div class="form-group">
                                {{ form_label(form.nextOfKin, null, { 'label_attr':  {
                                    'class': 'col-lg-3 control-label'
                                }}) }}
                            <div class="col-lg-9">
                                {{ form_errors(form.nextOfKin) }}
                                {{ form_widget(form.nextOfKin, { 'attr':  {
                                    'class': 'form-control'
                                }}) }}
                            </div>
                        </div>
                        <input type="button" name="next" class="next action-button" value="Suivant" />
                    </fieldset>
                    <fieldset>
                        <h2 class="fs-title">Addresse du distributeur</h2>
                        <div class="form-group">
                            {{ form_label(form.email, null, { 'label_attr':  {
                                'class': 'col-lg-3 control-label'
                            }}) }}            
                            <div class="col-lg-9">
                                {{ form_widget(form.email, { 'attr':  {
                                    'class': 'form-control'~(form.email.vars.valid ? '' : ' is-invalid')
                                }}) }}
                                <div class="invalid-feedback">
                                    {{ form_errors(form.email) }}
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                                {{ form_label(form.mobilePhone, null, { 'label_attr':  {
                                    'class': 'col-lg-3 control-label'
                                }}) }}
                            <div class="col-lg-9">
                                {{ form_widget(form.mobilePhone, { 'attr':  {
                                    'class': 'form-control' ~ (form.mobilePhone.vars.valid ? '' : ' is-invalid')
                                }}) }}
                                <div class="invalid-feedback">
                                {{ form_errors(form.mobilePhone) }}
                                </div>
                            </div>
                        </div>                       
                        <div class="form-group">
                                {{ form_label(form.city, null, { 'label_attr':  {
                                    'class': 'col-lg-3 control-label'
                                }}) }}
                            <div class="col-lg-9">
                                {{ form_widget(form.city, { 'attr':  {
                                    'class': 'form-control' ~ (form.city.vars.valid ? '' : ' is-invalid')
                                }}) }}
                                <div class="invalid-feedback">
                                    {{ form_errors(form.city) }}
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                                {{ form_label(form.country, null, { 'label_attr':  {
                                    'class': 'col-lg-3 control-label'
                                }}) }}
                            <div class="col-lg-9">
                                {{ form_widget(form.country, { 'attr':  {
                                    'class': 'form-control' ~ (form.country.vars.valid ? '' : ' is-invalid')
                                }}) }}
                                <div class="invalid-feedback">
                                    {{ form_errors(form.country) }}
                                </div>
                            </div>
                        </div>            
                        <input type="button" name="previous" class="previous action-button" value="Précédent" />
                        <input type="button" name="next" class="next action-button" value="Suivant" />
                    </fieldset>
                    <fieldset>
                        <h2 class="fs-title">Choix du pack</h2>
                        <div class="form-group">
                            {{ form_label(form.pack, null, { 'label_attr':  {
                                'class': 'col-lg-3 control-label'
                            }}) }}

                            <div class="col-lg-9">
                                {{ form_widget(form.pack, { 'attr':  {
                                    'class': 'form-control' ~ (form.pack.vars.valid ? '' : ' is-invalid' )
                                }}) }}
                                <div class="invalid-feedback">
                                    {{ form_errors(form.pack) }}
                                </div>
                            </div>
                        </div>

                        <div data-id="{{form.vars.data.membership.id}}" class="table-responsive">
                            Quote produit du {{ form.vars.data.membership.name }} : {{ form.vars.data.membership.membershipProductCote }}

                            <table class="table table-condensed">
                                <thead>
                                    <tr>
                                        <th>Produit</th>
                                        <th>Quantité</th>
                                        <th>Quote</th>
                                    </tr>
                                </thead>
                                <tbody id="table-body">
                                </tbody>
                                <tfoot>
                                    <tr>
                                        <th colspan="2">Total</th>
                                        <th id="value"></th>
                                    </tr>
                                </tfoot>                    
                            </table>
                        </div>
                        <input type="button" name="previous" class="previous action-button" value="Préc" />
                        <input type="submit" name="submit" class="submit action-button" value="Enregistrer" />
                    </fieldset>
                    {{ form_end(form) }}
                </div>
            </div>        
        </div>
    </div>
  </div>
{% block javascripts %}
{{ encore_entry_script_tags('app') }}
{{ encore_entry_script_tags('autocomplete') }}
{{ encore_entry_script_tags('fieldset') }}
{% endblock %}
</body>
</html>