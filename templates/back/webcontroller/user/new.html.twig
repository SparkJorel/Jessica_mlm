{% extends 'base.html.twig' %}
{% block title %} Jessica Total Wellness Concept - Enregistrement d'un nouvel utilisateur {% endblock %}
{% block page_title %} Enregistrement d'un nouvel utilisateur {% endblock %}
{% block main %}
<div class="col-lg-12">
    <div class="form-panel">
        <div class="alert alert-success hide"></div>
        {{ form_start(form, {attr: {'novalidate': 'novalidate', 'id': 'form', 'class': 'form-horizontal style-form'}}) }}
        <!-- progressbar -->
        <ul id="progressbar">
            <li class="active">Sponsor, Upline & Package</li>
            <li>Add Personal Details</li>
            <li>Login Info</li>
            <li>Delivery Information</li>
        </ul>
        <fieldset>
            <h2 class="fs-title">Sponsor & Package</h2>
            <div class="form-group">
                {{ form_label(form.sponsor, null, { 'label_attr':  {
                    'class': 'col-lg-2 control-label'
                }}) }}
                <div class="col-lg-10">
                    {{ form_widget(form.sponsor, { 'attr':  {
                        'class': 'form-control' ~ (form.sponsor.vars.valid ? '' : ' is-invalid')
                    }}) }}
                    <div class="invalid-feedback">{{ form_errors(form.sponsor) }}</div>
                </div>
            </div>
            {% if form.upline is defined %}
                <div class="form-group">
                    {{ form_label(form.upline, null, { 'label_attr':  {
                        'class': 'col-lg-2 control-label'
                    }}) }}
                    <div class="col-lg-10">
                        {{ form_errors(form.upline) }}
                        {{ form_widget(form.upline, { 'attr':  {
                            'class': 'form-control'
                        }}) }}
                    </div>
                </div>
            {% endif %}
            <div class="form-group">
                {{ form_label(form.position, null, { 'label_attr':  {
                    'class': 'col-lg-2 control-label'
                }}) }}
                <div class="col-lg-10">
                    {{ form_widget(form.position, { 'attr':  {
                        'class': 'form-control'~(form.position.vars.valid ? '' : ' is-invalid')
                    }}) }}
                    <div class="invalid-feedback">
                        {{ form_errors(form.position) }}
                    </div>
                </div>
            </div>
            <div class="form-group">
                {{ form_label(form.membership, null, { 'label_attr':  {
                    'class': 'col-lg-2 control-label'
                }}) }}
                <div class="col-lg-10">
                    {{ form_widget(form.membership, { 'attr':  {
                        'class': 'form-control' ~ (form.membership.vars.valid ? '' : ' is-invalid')
                    }}) }}
                    <div class="invalid-feedback">
                        {{ form_errors(form.membership) }}
                    </div>
                </div>
            </div>
            <input type="button" name="next" class="next action-button" value="Suivant" />
        </fieldset>
        <fieldset>
            <h2 class="fs-title">Add Personal Details</h2>
            <div class="form-group">
                {{ form_label(form.title, null, { 'label_attr':  {
                    'class': 'col-lg-2 control-label'
                }}) }}
                <div class="col-lg-10">
                    {{ form_widget(form.title, { 'attr':  {
                        'class': 'form-control' ~ (form.title.vars.valid ? '' : ' is-invalid')
                    }}) }}
                    <div class="invalid-feedback">
                        {{ form_errors(form.title) }}
                    </div>
                </div>
            </div>
            <div class="form-group">
                {{ form_label(form.fullname, null, { 'label_attr':  {
                    'class': 'col-lg-2 control-label'
                }}) }}

                <div class="col-lg-10">
                    {{ form_widget(form.fullname, { 'attr':  {
                        'class': 'form-control' ~ (form.fullname.vars.valid ? '' : ' is-invalid' )
                    }}) }}
                    <div class="invalid-feedback">
                        {{ form_errors(form.fullname) }}
                    </div>
                </div>
            </div>
            <div class="form-group">
                    {{ form_label(form.dateOfBirth, null, { 'label_attr':  {
                        'class': 'col-lg-2 control-label'
                    }}) }}
                <div class="col-lg-10">
                    {{ form_widget(form.dateOfBirth, { 'attr':  {
                        'class': 'form-control' ~ (form.dateOfBirth.vars.valid ? '' : ' is-invalid')
                    }}) }}
                    <div class="invalid-feedback">
                        {{ form_errors(form.dateOfBirth) }}
                    </div>
                </div>
            </div>
            <div class="form-group">
                    {{ form_label(form.gender, null, { 'label_attr':  {
                        'class': 'col-lg-2 control-label'
                    }}) }}
                <div class="col-lg-10">
                    {{ form_widget(form.gender, { 'attr':  {
                        'class': 'form-control' ~ (form.gender.vars.valid ? '' : ' is-invalid')
                    }}) }}
                    <div class="invalid-feedback">
                        {{ form_errors(form.gender) }}
                    </div>
                </div>
            </div>
            <div class="form-group">
                {{ form_label(form.email, null, { 'label_attr':  {
                    'class': 'col-lg-2 control-label'
                }}) }}            
                <div class="col-lg-10">
                    {{ form_widget(form.email, { 'attr':  {
                        'class': 'form-control'~(form.email.vars.valid ? '' : ' is-invalid')
                    }}) }}
                    <div class="invalid-feedback">
                        {{ form_errors(form.email) }}
                    </div>
                </div>
            </div>
            <div class="form-group">
                    {{ form_label(form.documentType, null, { 'label_attr':  {
                        'class': 'col-lg-2 control-label'
                    }}) }}
                <div class="col-lg-10">
                    {{ form_widget(form.documentType, { 'attr':  {
                        'class': 'form-control' ~ (form.documentType.vars.valid ? '' : ' is-invalid')
                    }}) }}
                    <div class="invalid-feedback">
                        {{ form_errors(form.documentType) }}
                    </div>
                </div>
            </div>
            <div class="form-group">
                    {{ form_label(form.cni, null, { 'label_attr':  {
                        'class': 'col-lg-2 control-label'
                    }}) }}
                <div class="col-lg-10">
                    {{ form_widget(form.cni, { 'attr':  {
                        'class': 'form-control' ~ (form.cni.vars.valid ? '' : ' is-invalid')
                    }}) }}
                    <div class="invalid-feedback">
                        {{ form_errors(form.cni) }}
                    </div>
                </div>
            </div>
            <div class="form-group">
                    {{ form_label(form.mobilePhone, null, { 'label_attr':  {
                        'class': 'col-lg-2 control-label'
                    }}) }}
                <div class="col-lg-10">
                    {{ form_widget(form.mobilePhone, { 'attr':  {
                        'class': 'form-control' ~ (form.mobilePhone.vars.valid ? '' : ' is-invalid')
                    }}) }}
                     <div class="invalid-feedback">
                       {{ form_errors(form.mobilePhone) }}
                    </div>
                </div>
            </div>
            <div class="form-group">
                    {{ form_label(form.imageFile, null, { 'label_attr':  {
                        'class': 'col-lg-2 control-label'
                    }}) }}
                <div class="col-lg-10">
                    {{ form_errors(form.imageFile) }}
                    {{ form_widget(form.imageFile, { 'attr':  {
                        'class': 'form-control'
                    }}) }}
                </div>
            </div>
            <div class="form-group">
                    {{ form_label(form.nextOfKin, null, { 'label_attr':  {
                        'class': 'col-lg-2 control-label'
                    }}) }}
                <div class="col-lg-10">
                    {{ form_errors(form.nextOfKin) }}
                    {{ form_widget(form.nextOfKin, { 'attr':  {
                        'class': 'form-control'
                    }}) }}
                </div>
            </div>
            <input type="button" name="previous" class="previous action-button" value="Précédent" />
            <input type="button" name="next" class="next action-button" value="Suivant" />
        </fieldset>
        <fieldset>
            <h2 class="fs-title">Login Info</h2>
            <div class="form-group">
                    {{ form_label(form.username, null, { 'label_attr':  {
                        'class': 'col-lg-2 control-label'
                    }}) }}
                <div class="col-lg-10">
                    {{ form_widget(form.username, { 'attr':  {
                        'class': 'form-control' ~ (form.username.vars.valid ? '' : ' is-invalid')
                    }}) }}
                    <div class="invalid-feedback">
                        {{ form_errors(form.username) }}
                    </div>
                </div>
            </div>
            {% if form.password is defined %}
                <div class="form-group">
                        {{ form_label(form.password.first, null, { 'label_attr':  {
                            'class': 'col-lg-2 control-label'
                        }}) }}
                    <div class="col-lg-10">
                        {{ form_widget(form.password.first, { 'attr':  {
                            'class': 'form-control' ~ (form.password.first.vars.valid ? '' : ' is-invalid')
                        }}) }}
                        <div class="invalid-feedback">
                        {{ form_errors(form.password.first) }}
                        </div>
                    </div>
                </div>
                <div class="form-group">
                        {{ form_label(form.password.second, null, { 'label_attr':  {
                            'class': 'col-lg-2 control-label'
                        }}) }}
                    <div class="col-lg-10">
                        {{ form_widget(form.password.second, { 'attr':  {
                            'class': 'form-control' ~ (form.password.second.vars.valid ? '' : ' is-invalid')
                        }}) }}
                        <div class="invalid-feedback">
                            {{ form_errors(form.password.second) }}
                        </div>
                    </div>
                </div>
            {% endif %}
            <input type="button" name="previous" class="previous action-button" value="Précédent" />
            <input type="button" name="next" class="next action-button" value="Suivant" />
        </fieldset>
        <fieldset>
            <h2 class="fs-title">Delivery Information</h2>
            <div class="form-group">
                    {{ form_label(form.city, null, { 'label_attr':  {
                        'class': 'col-lg-2 control-label'
                    }}) }}
                <div class="col-lg-10">
                    {{ form_widget(form.city, { 'attr':  {
                        'class': 'form-control' ~ (form.city.vars.valid ? '' : ' is-invalid')
                    }}) }}
                    <div class="invalid-feedback">
                        {{ form_errors(form.city) }}
                    </div>
                </div>
            </div>
            <div class="form-group">
                    {{ form_label(form.country, null, { 'label_attr':  {
                        'class': 'col-lg-2 control-label'
                    }}) }}
                <div class="col-lg-10">
                    {{ form_widget(form.country, { 'attr':  {
                        'class': 'form-control' ~ (form.country.vars.valid ? '' : ' is-invalid')
                    }}) }}
                    <div class="invalid-feedback">
                    {{ form_errors(form.country) }}
                    </div>
                </div>
            </div>
            <input type="button" name="previous" class="previous action-button" value="Précédent" />
            <input type="submit" name="submit" class="submit action-button" value="Submit" />
        </fieldset>
        {{ form_end(form) }}
    </div>
</div>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('autocomplete') }}
    {{ encore_entry_script_tags('fieldset') }}
{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('autocomplete') }}
    {{ encore_entry_link_tags('fieldset') }}
{% endblock %}