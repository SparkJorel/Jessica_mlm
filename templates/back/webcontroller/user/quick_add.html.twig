{% extends 'base.html.twig' %}
{% block title %} Jessica Total Wellness Concept - Enregistrement d'un nouvel utilisateur {% endblock %}
{% block page_title %} Enregistrement d'un nouvel utilisateur {% endblock %}
{% block main %}
<div class="col-lg-12">
    <div class="form-panel">
        <div class="alert alert-success hide"></div>
        {{ form_start(form, {attr: {'novalidate': 'novalidate', 'id': 'form', 'class': 'form-horizontal style-form'}}) }}
        <!-- progressbar -->
        <ul id="progressbar">
            <li class="active">Sponsor, Upline & Package</li>
            <li>Informations personnelles du distributeur</li>
        </ul>
        <fieldset>
            <h2 class="fs-title">Sponsor, Upline & Package</h2>
            <div class="form-group">
                {{ form_label(form.sponsor, null, { 'label_attr':  {
                    'class': 'col-lg-2 control-label'
                }}) }}
                <div class="col-lg-10">
                    {{ form_widget(form.sponsor, { 'attr':  {
                        'class': 'form-control' ~ (form.sponsor.vars.valid ? '' : ' is-invalid')
                    }}) }}
                    <div class="invalid-feedback">{{ form_errors(form.sponsor) }}</div>
                </div>
            </div>
            {% if form.upline is defined %}
                <div class="form-group">
                    {{ form_label(form.upline, null, { 'label_attr':  {
                        'class': 'col-lg-2 control-label'
                    }}) }}
                    <div class="col-lg-10">
                        {{ form_errors(form.upline) }}
                        {{ form_widget(form.upline, { 'attr':  {
                            'class': 'form-control'
                        }}) }}
                    </div>
                </div>
            {% endif %}
            <div class="form-group">
                {{ form_label(form.position, null, { 'label_attr':  {
                    'class': 'col-lg-2 control-label'
                }}) }}
                <div class="col-lg-10">
                    {{ form_widget(form.position, { 'attr':  {
                        'class': 'form-control'~(form.position.vars.valid ? '' : ' is-invalid')
                    }}) }}
                    {{ form_help(form.position) }}
                    <div class="invalid-feedback">
                        {{ form_errors(form.position) }}
                    </div>
                </div>
            </div>
            <div class="form-group">
                {{ form_label(form.membership, null, { 'label_attr':  {
                    'class': 'col-lg-2 control-label'
                }}) }}
                <div class="col-lg-10">
                    {{ form_widget(form.membership, { 'attr':  {
                        'class': 'form-control' ~ (form.membership.vars.valid ? '' : ' is-invalid')
                    }}) }}
                    <div class="invalid-feedback">
                        {{ form_errors(form.membership) }}
                    </div>
                </div>
            </div>
            <input type="button" name="next" class="next action-button" value="Suivant" />
        </fieldset>
        <fieldset>
            <h2 class="fs-title">Informations personnelles du distributeur</h2>
            <div class="form-group">
                {{ form_label(form.fullname, null, { 'label_attr':  {
                    'class': 'col-lg-2 control-label'
                }}) }}

                <div class="col-lg-10">
                    {{ form_widget(form.fullname, { 'attr':  {
                        'class': 'form-control' ~ (form.fullname.vars.valid ? '' : ' is-invalid' )
                    }}) }}
                    <div class="invalid-feedback">
                        {{ form_errors(form.fullname) }}
                    </div>
                </div>
            </div>
            <div class="form-group">
                    {{ form_label(form.gender, null, { 'label_attr':  {
                        'class': 'col-lg-2 control-label'
                    }}) }}
                <div class="col-lg-10">
                    {{ form_widget(form.gender, { 'attr':  {
                        'class': 'form-control' ~ (form.gender.vars.valid ? '' : ' is-invalid')
                    }}) }}
                    <div class="invalid-feedback">
                        {{ form_errors(form.gender) }}
                    </div>
                </div>
            </div>
            <div class="form-group">
                {{ form_label(form.email, null, { 'label_attr':  {
                    'class': 'col-lg-2 control-label'
                }}) }}            
                <div class="col-lg-10">
                    {{ form_widget(form.email, { 'attr':  {
                        'class': 'form-control'~(form.email.vars.valid ? '' : ' is-invalid')
                    }}) }}
                    {{ form_help(form.email) }}
                    <div class="invalid-feedback">
                        {{ form_errors(form.email) }}
                    </div>
                </div>
            </div>
            <div class="form-group">
                    {{ form_label(form.mobilePhone, null, { 'label_attr':  {
                        'class': 'col-lg-2 control-label'
                    }}) }}
                <div class="col-lg-10">
                    {{ form_widget(form.mobilePhone, { 'attr':  {
                        'class': 'form-control' ~ (form.mobilePhone.vars.valid ? '' : ' is-invalid')
                    }}) }}
                     <div class="invalid-feedback">
                       {{ form_errors(form.mobilePhone) }}
                    </div>
                </div>
            </div>
            <div class="form-group">
                    {{ form_label(form.city, null, { 'label_attr':  {
                        'class': 'col-lg-2 control-label'
                    }}) }}
                <div class="col-lg-10">
                    {{ form_widget(form.city, { 'attr':  {
                        'class': 'form-control' ~ (form.city.vars.valid ? '' : ' is-invalid')
                    }}) }}
                    <div class="invalid-feedback">
                        {{ form_errors(form.city) }}
                    </div>
                </div>
            </div>
            <div class="form-group">
                    {{ form_label(form.country, null, { 'label_attr':  {
                        'class': 'col-lg-2 control-label'
                    }}) }}
                <div class="col-lg-10">
                    {{ form_widget(form.country, { 'attr':  {
                        'class': 'form-control' ~ (form.country.vars.valid ? '' : ' is-invalid')
                    }}) }}
                    <div class="invalid-feedback">
                        {{ form_errors(form.country) }}
                    </div>
                </div>
            </div>            
            <input type="button" name="previous" class="previous action-button" value="PrÃ©c" />
            <input type="submit" name="submit" class="submit action-button" value="Enregistrer" />
            <input type="submit" name="submit_and_paid" class="submit action-button" value="Payer" />
        </fieldset>
        {{ form_end(form) }}
    </div>
</div>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('autocomplete') }}
    {{ encore_entry_script_tags('fieldset') }}
{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('autocomplete') }}
    {{ encore_entry_link_tags('fieldset') }}
{% endblock %}