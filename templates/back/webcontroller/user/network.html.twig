{% extends 'base.html.twig' %}
{% block title %}
    Jessica Total Wellness Concept - Mon réseau
{% endblock %}
{% block page_title %}
    Mon réseau
{% endblock %}
{% block main %}
    <div class="col-lg-12">
        <div class="content-panel">
            {% for type, messages in app.session.flashbag.all() %}
                {% for message in messages %}
                    <div class="alert alert-{{type}}">{{message}}</div>
                {% endfor %}
            {% endfor %}
            <h4>
                <a href="{{ path('user_new_from_known_sponsor') }}">
                    <button type="button" class="btn btn-primary">
                        <span class="fa fa-plus"></span>
                        Ajouter un membre
                    </button>
                </a>
            </h4>
            <section id="unseen">
                <table class="table table-bordered table-striped table-condensed">
                    <thead>
                        <tr>
                            <th>Titre</th>
                            <th>Nom & Prénoms</th>
                            <th>Sexe</th>
                            <th>Email</th>
                            <th>Téléphone</th>
                            <th>Etat</th>
                            <th>Ville</th>
                            <th>Pays</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for user in users %}
                            {% if app.user.rgt >= user.rgt %}
                            <tr>
                                <td>{{ user.title }}</td>
                                <td>{{ user.fullname }}</td>
                                <td>{{ user.gender }}</td>
                                <td>{{ user.email }}</td>
                                <td>{{ user.mobilePhone }}</td>
                                <td>{{ user.state }}</td>
                                <td>{{ user.city }}</td>
                                <td>{{ user.country }}</td>
                                <td>
                                    {% set difference = date( "now" | date() ).diff(date(user.entryDate)) %}
                                    {% set leftDays = difference.days %}
                                    {% if leftDays <= 2 %}
                                        <a href="{{ path('user_edit', {'id': user.id})}}" title="Edit" class="btn btn-info btn-xs">
                                            <span class="fa fa-edit"></span>
                                        </a>
                                    {% endif %}
                                    {% if not user.activated %}
                                        <button type="button" class="btn btn-danger btn-xs" title="Activate">
                                            <span class="fa fa-toggle-on"></span>
                                        </button>
                                    {% else %}
                                        <button type="button" class="btn btn-info btn-xs" title="Activated">
                                            <span class="fa fa-check-circle"></span>
                                        </button>
                                    {% endif %}
                                </td>
                            </tr>
                            {% endif %}
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
