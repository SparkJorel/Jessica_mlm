{% extends 'base.html.twig' %}
{% block title %} Jessica Total Wellness Concept - Modification du mot de passe {% endblock %}
{% block page_title %} Modification du mot de passe {% endblock %}
{% block main %}
    <div class="col-lg-12">
        <div class="form-panel">
        {{ form_start(form, {attr: {'id': 'form', 'class': 'form-horizontal style-form'}}) }}
            <div class="form-group">
                {{ form_label(form.oldPassword, null, { 'label_attr':  {
                    'class': 'col-lg-2 control-label'
                }}) }}
                <div class="col-lg-10">
                    {{ form_widget(form.oldPassword, { 'attr':  {
                        'class': 'form-control'
                    }}) }}
                </div>
            </div>
            <div class="form-group">
                {{ form_label(form.password.first, null, { 'label_attr':  {
                        'class': 'col-lg-2 control-label'
                    }}) }}
                <div class="col-lg-10">
                    {{ form_widget(form.password.first, { 'attr':  {
                        'class': 'form-control'
                    }}) }}
                </div>
            </div>
            <div class="form-group">
                {{ form_label(form.password.second, null, { 'label_attr':  {
                    'class': 'col-lg-2 control-label'
                }}) }}
                <div class="col-lg-10">
                    {{ form_widget(form.password.second, { 'attr':  {
                        'class': 'form-control'
                    }}) }}
                </div>
            </div>
            <div class="form-group">
                <div class="col-lg-offset-10 col-lg-2">
                    <input type="submit" name="submit" class="btn btn-theme" value="Submit" />
                </div>
            </div>
        {{ form_end(form) }}    
        </div>
    </div>
{% endblock %}