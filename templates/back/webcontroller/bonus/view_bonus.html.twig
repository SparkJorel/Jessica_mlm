{% extends 'base.html.twig' %}
{% block title %} Jessica Total Wellness Concept - Bonus Parrainage {% endblock %}
{% block page_title %} Bonus Parrainage {% endblock %}
{% block main %}
    <div class="col-lg-12">
        <div class="form-panel">
            <form class="form-inline" role="form" style="margin: 30px 0;">
                <div class="form-group">
                    {{ form_widget(form.period) }}
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Afficher</button>
                </div>
            </form>
        </div>
        <div class="content-panel">
            <section id="unseen">
                <table class="display table table-bordered">
                    <thead>
                    <tr>
                        <th>Downline</th>
                        <th>Membership</th>
                        <th>Date</th>
                        <th>Montant</th>
                        <th>Statut</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for bonusMontant in bonusMontants %}
                        <tr>
                            <td>{{ bonusMontant.sponsorised }}</td>
                            <td>{{ bonusMontant.membership }}</td>
                            <td>{{ bonusMontant.dateActivation|date('d/m/Y') }}</td>
                            <td>{{ bonusMontant.value }}</td>
                            <td>{% if bonusMontant.paid %} Payé {% else %} Non payé {% endif %}</td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="5">Vous n'avez parrainé aucun nouveau membre au cours de ce cycle</td>
                        </tr>
                    {% endfor %}
                    <tr>
                        <td class="text-right" colspan="3">Total</td>
                        <td class="text-center" colspan="2">{{ total }}</td>
                    </tr>
                    </tbody>
                </table>
            </section>
        </div>
    </div>
{% endblock %}
