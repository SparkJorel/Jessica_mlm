{% extends 'base.html.twig' %}
{% block title %} Jessica Total Wellness Concept - Rapport activité du cycle {% endblock %}
{% block page_title %} Les commissions du cycle {% endblock %}
{% block main %}
    <div class="col-lg-12">
        <div class="form-panel">
            <form class="form-inline" role="form" style="margin: 30px 0;">
                <div class="form-group">
                    {{ form_widget(form.period) }}
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Afficher</button>
                </div>
            </form>
        </div>
        <div class="content-panel">
            <section id="unseen" class="adv-table">
                <table class="display table table-bordered table-condensed" id="table-info">
                    <tr>
                        <th rowspan="2">ACTIF</th>
                        <th>Parrainage</th>
                        <td>{% if report['parrainage'] is defined %}{{ report['parrainage'] }}{% endif %}</td>
                        <td rowspan="2">{{ report['commissionsActif'] }}</td>
                    </tr>
                    <tr>
                        <th>Achat Personnel</th>
                        <td>{% if report['achat_personal'] is defined %}{{ report['achat_personal'] }}{% endif %}</td>
                    </tr>                    
                    <tr>
                        <th rowspan="3">PASSIF</th>
                        <th>Binaire</th>
                        <td>{% if report['binaire'] is defined %}{{ report['binaire'] }}{% endif %}</td>
                        <td rowspan="3">{{ report['commissionsPassif'] }}</td>
                    </tr>
                    <tr>
                        <th>Générationnel</th>
                        <td>{% if report['generationnel'] is defined %}{{ report['generationnel'] }}{% endif %}</td>
                    </tr>
                    <tr>
                        <th>Indirect Bonus</th>
                        <td>{% if report['indirect_bonus'] is defined %}{{ report['indirect_bonus'] }}{% endif %}</td>
                    </tr>
                    <tr>
                        <th colspan="3">Total</th>
                        <td>{{ report['commissions'] }}</td>
                    </tr>
                </table>
                <p><strong>1 VA = 1SV = 600FCFA = 1 Dollar US</strong></p>
            </section>
        </div>
    </div>
{% endblock %}

