{% extends 'base.html.twig' %}
{% block title %} Jessica Total Wellness Concept - Enregistrement d'une commande {% endblock %}
{% block page_title %} Enregistrement d'une commande {% endblock %}
{% block main %}
    <div class="col-lg-12">
        <div class="form-panel">
            {% if is_granted('ROLE_JTWC_ADMIN') %}
                <div class="form-group col-md-6 ">
                    <label for="client">Client</label>
                    <input type="text" class="form-control" id="client" value="{{ app.user.fullname~" ("~app.user.username~")" }}" placeholder="Nom du client">
                </div>
                <div class="form-group col-md-6 ">
                    <label for="date_op">Date achat</label>
                    <input type="datetime-local" class="form-control" id="date_op" placeholder="Entrez la date de l'opération">
                </div>
            {% else %}
            <div class="form-group">
                <label for="client">Client</label>
                <input type="text" class="form-control" id="client" value="{{ app.user.fullname~" ("~app.user.username~")" }}" placeholder="Nom du client">
            </div>
            {% endif %}
            {{ form_start(form, {attr: {'novalidate': 'novalidate', 'id': 'form', 'class': 'form-horizontal style-form'}}) }}
                <div class="form-group">
                    {{ form_label(form.product, null, { 'label_attr':  {
                        'class': 'col-form-label col-lg-2 required'
                    }}) }}
                    <div class="col-lg-10">
                        {{ form_errors(form.product) }}
                        {{ form_widget(form.product, { 'attr':  {
                            'class': 'form-control'
                        }}) }}
                    </div>
                </div>
                <div class="form-group">
                    {{ form_label(form.quantity, null, { 'label_attr':  {
                        'class': 'col-form-label col-lg-2 required'
                    }}) }}
                    <div class="col-lg-10">
                        {{ form_errors(form.quantity) }}
                        {{ form_widget(form.quantity, { 'attr':  {
                            'class': 'form-control'
                        }}) }}
                    </div>
                </div>                
                <div class="form-group">
                    <span id="add_cart" class="col-lg-offset-8 btn btn-primary">Ajouter au panier</span >
                </div>
            {{ form_end(form) }}
        </div>
        <div class="content-panel">
            <section id="unseen">
                <table class="table table-bordered table-striped table-condensed">
                    <thead>
                    <tr>
                        <th>Désignation</th>
                        <th>Quantité</th>
                        <th>Prix Unitaire</th>
                        <th>Total</th>
                        <th>Actions</th>
                    </tr>
                    </thead>
                    <tbody id="content_cart">
                    <tr id="total">
                        <td colspan="3">Prix total</td>
                        <td id="price">0</td>
                        <td><button id="command">Commander</button></td>
                    </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('add_product') }}
{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('add_product') }}
{% endblock %}
