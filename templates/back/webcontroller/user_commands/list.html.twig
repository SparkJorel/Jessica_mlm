{% extends 'base.html.twig' %}
{% block title %}
    Jessica Total Wellness Concept - {{ title }}
{% endblock %}
{% block page_title %}
    {{ title }}
{% endblock %}

{% block main %}
    <div class="col-lg-12">
        <div class="form-panel">
            <form class="form-inline" role="form" style="margin: 30px 0;">
                <div class="form-group">
                    {{ form_widget(form.period) }}
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Afficher</button>
                </div>
            </form>
        </div>
        <div class="content-panel">
            {% for type, messages in app.session.flashbag.all() %}
                {% for message in messages %}
                    <div class="alert alert-{{type}}">{{message}}</div>
                {% endfor %}
            {% endfor %}
            <h4>
                <a href="{{ path('products_all') }}">
                    <button type="button" class="btn btn-primary">
                        <span class="fa fa-plus"></span>
                        Commander
                    </button>
                </a>
            </h4>
            <section id="unseen">
                <table class="table table-bordered table-striped table-condensed">
                    <thead>
                    <tr>
                        <th>Nom & Prénoms</th>
                        <th>Code</th>
                        <th>Date Commande</th>
                        <th>Payé ?</th>
                        <th>Volume SV</th>
                        <th>SV AP</th>
                        {% if is_granted('ROLE_JTWC_ADMIN') or is_granted('ROLE_JTWC_USER_SECRET') %}
                        <th>Actions</th>
                        {% endif %}
                    </tr>
                    </thead>
                    <tbody>
                    {% for command in userCommands %}
                        <tr>
                            <td>{{ command.user.fullname }}</td>
                            <td>{{ command.code }}</td>
                            <td>{{ command.dateCommand|date('d/m/Y H:i:s') }}</td>
                            <td>
                                {% if command.paid %} 
                                    <button type="button" class="btn btn-info btn-xs" title="Oui">
                                        <span class="fa fa-check-square"></span>
                                    </button>
                                {% else %}
                                    <button type="button" class="btn btn-warning btn-xs" title="Non">
                                        <span class="fa fa-times"></span>
                                    </button>                                     
                                {% endif %}
                            </td>
                            <td>{% if command.totalSVBinaire is not null %} {{ command.totalSVBinaire }} {% else %} {{ svUserCommands[command.code] }} {% endif %}</td>
                            <td>{% if command.totalSVAP is not null %} {{ command.totalSVAP }} {% else %} {{ svAchatUserCommands[command.code] }} {% endif %}</td>
                            {% if is_granted('ROLE_JTWC_ADMIN') or is_granted('ROLE_JTWC_USER_SECRET') %}
                                <td>
                                <a href="{{ path('user_command_edit', {'id': command.id})}}" title="Edit" class="btn btn-info btn-xs">
                                    <span class="fa fa-edit"></span>
                                </a>
                                {% if not command.delivered %}
                                    <button type="button" class="btn btn-outline-primary btn-xs" title="Undelivered" data-toggle="modal" data-target="#commandDeliveredDialog{{command.id}}">
                                        <span class="fa fa-truck"></span>
                                    </button>
                                    <div class="modal fade" id="commandDeliveredDialog{{command.id}}" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                                        <div class="modal-dialog">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                                                    <h4 class="modal-title" id="myModalLabel">Confirmation needed</h4>
                                                </div>
                                                <div class="modal-body">
                                                    Voulez vous confimer la livraison de cette commande ?
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-default" data-dismiss="modal">Abandonner</button>
                                                    <a href="{{ path('user_command_delivered', {'id': command.id}) }}" class="btn btn-danger">Confirmer</a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                {% else %}
                                    <button type="button" class="btn btn-info btn-xs" title="Delivered">
                                        <span class="fa fa-check-circle"></span>
                                    </button>
                                {% endif %}
                                {% if not command.paid %}
                                    <button type="button" class="btn btn-outline-info btn-xs" title="Unpaid" data-toggle="modal" data-target="#commandPaidDialog{{command.id}}">
                                        <span class="fa fa-credit-card"></span>
                                    </button>
                                    <div class="modal fade" id="commandPaidDialog{{command.id}}" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                                        <div class="modal-dialog">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                                                    <h4 class="modal-title" id="myModalLabel">Confirmation needed</h4>
                                                </div>
                                                <div class="modal-body">
                                                    Voulez vous confirmer le paiement de cette commande ?
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-default" data-dismiss="modal">Abandonner</button>
                                                    <a href="{{ path('user_command_paid', {'id': command.id}) }}" class="btn btn-danger">Confirmer</a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                {% else %}
                                    <button type="button" class="btn btn-info btn-xs" title="Paid">
                                        <span class="fa fa-check-circle"></span>
                                    </button>
                                {% endif %}
                                <button type="button" class="btn btn-danger btn-xs" title="Delete" data-toggle="modal" data-target="#commandDeleteDialog{{command.id}}">
                                    <span class="fa fa-remove"></span>
                                </button>
                                <div class="modal fade" id="commandDeleteDialog{{command.id}}" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                                    <div class="modal-dialog">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                                                <h4 class="modal-title" id="myModalLabel">Confirmation needed</h4>
                                            </div>
                                            <div class="modal-body">
                                                Voulez vous vraiment supprimer cette commande ?
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-default" data-dismiss="modal">Abandonner</button>
                                                <form action="{{ path('user_command_delete', {'id': command.id}) }}" method="post">
                                                    <input type="hidden" name="_method" value="DELETE">
                                                    <input type="hidden" name="_jtwc_user_commands_token" value="{{ csrf_token('jtwc_user_commands-delete'~command.id) }}"/>
                                                    <button type="submit" class="btn btn-danger">Confirmer</button>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </td>
                            {% endif %}
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}

