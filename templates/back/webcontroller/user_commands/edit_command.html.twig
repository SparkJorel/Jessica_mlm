{% extends 'base.html.twig' %}
{% block title %} Jessica Total Wellness Concept - Modification d'une commande {% endblock %}
{% block page_title %} Modification d'une commande {% endblock %}
{% block main %}
    <div class="col-lg-12">
        <div class="form-panel">
            <div class="form-group">
                <label for="client">Client</label>
                <input type="text" class="form-control" id="client" value="{{ app.user.fullname~" ("~app.user.username~")" }}" placeholder="Nom du client">
            </div>
            {{ form_start(form, {attr: {'novalidate': 'novalidate', 'id': 'form', 'class': 'form-horizontal style-form'}}) }}
                <div class="form-group">
                    {{ form_label(form.product, null, { 'label_attr':  {
                        'class': 'col-form-label col-lg-2 required'
                    }}) }}
                    <div class="col-lg-10">
                        {{ form_errors(form.product) }}
                        {{ form_widget(form.product, { 'attr':  {
                            'class': 'form-control'
                        }}) }}
                    </div>
                </div>
                <div class="form-group">
                    {{ form_label(form.quantity, null, { 'label_attr':  {
                        'class': 'col-form-label col-lg-2 required'
                    }}) }}
                    <div class="col-lg-10">
                        {{ form_errors(form.quantity) }}
                        {{ form_widget(form.quantity, { 'attr':  {
                            'class': 'form-control'
                        }}) }}
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-lg-offset-8 col-lg-2">
                        <div id="add_cart" class="btn btn-primary">Ajouter au panier</div>
                    </div>
                </div>
            {{ form_end(form) }}
        </div>
        <div class="content-panel">
            <section id="unseen">
                <table class="table table-bordered table-striped table-condensed" data-commande="{{id_commande}}">
                    <thead>
                    <tr>
                        <th>Désignation</th>
                        <th class="numeric">Quantité</th>
                        <th class="numeric">Prix Unitaire</th>
                        <th class="numeric">Total</th>
                        <th>Actions</th>
                    </tr>
                    </thead>
                    <tbody id="content_cart">
                    {% for command in commands %}
                        <tr id="{{command[0].code}}" class="item">
                            <td>{{ command[0].code }}</td>
                            <td class="numeric">{{ command[1] }}</td>
                            <td class="numeric">{{ command[2] }}</td>
                            <td class="numeric">{{ command[3] }}</td>
                            <td>
                                <button type='button' class='btn btn-danger btn-xs action-del' title='Delete'>
                                    <span class="fa fa-remove"></span>
                                </button>
                            </td>
                        </tr>
                    {% endfor %}
                    <tr id="total">
                        <td colspan="3">Prix total</td>
                        <td id="price">{{ totalCommande }}</td>
                        <td><button class="btn btn-info" id="command">Commander</button></td>
                    </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('add_product') }}
{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('add_product') }}
{% endblock %}
