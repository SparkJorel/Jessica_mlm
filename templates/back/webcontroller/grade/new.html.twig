{% extends 'base.html.twig' %}
{% block title %} Jessica Total Wellness Concept - Enregistrement d'un nouveau grade {% endblock %}
{% block page_title %} Enregistrement d'un nouveau grade {% endblock %}
{% block main %}
    <div class="col-lg-12">
        <div class="form-panel">
		    {% for type, messages in app.session.flashbag.all() %}
                {% for message in messages %}
                    <div class="alert alert-{{type}}">{{message}}</div>
                {% endfor %}
            {% endfor %}
            {{ form_start(form, {attr: {'novalidate': 'novalidate', 'id': 'form', 'class': 'form-horizontal style-form'}}) }}
            <!-- progressbar -->
            <ul id="progressbar">
                <li class="active">Step 1: Informations sur le grade</li>
                <li>Step 2: Informations additionnelles</li>
                <li>Step 3: Bonus générationnel</li>
            </ul>
            <fieldset>
                <h2 class="fs-title">Step 1: Informations sur le grade</h2>
                <div class="form-group">
                        {{ form_label(form.commercialName, null, { 'label_attr':  {
                            'class': 'col-lg-2 control-label'
                        }}) }}
                    <div class="col-lg-10">
                        {{ form_errors(form.commercialName) }}
                        {{ form_widget(form.commercialName, { 'attr':  {
                            'class': 'form-control'
                        }}) }}
                    </div>
                </div>
                <div class="form-group">
                    {{ form_label(form.technicalName, null, { 'label_attr':  {
                        'class': 'col-lg-2 control-label'
                    }}) }}

                    <div class="col-lg-10">
                        {{ form_errors(form.technicalName) }}
                        {{ form_widget(form.technicalName, { 'attr':  {
                            'class': 'form-control'
                        }}) }}
                    </div>
                </div>
                <div class="form-group">
                        {{ form_label(form.weight, null, { 'label_attr':  {
                            'class': 'col-lg-2 control-label'
                        }}) }}                
                    <div class="col-lg-10">
                        {{ form_errors(form.weight) }}
                        {{ form_widget(form.weight, { 'attr':  {
                            'class': 'form-control col-lg-6'
                        }}) }}
                    </div>
                </div>
                <div class="form-group" style="text-align: left">
                    <div class="col-lg-10">
                        {{ form_errors(form.rewardable) }}
                        {{ form_widget(form.rewardable, { 'attr':  {
                            'class': '', 'style': 'text-align: right'
                        }}) }}                        
                    </div>
                </div>
                <div class="form-group">
                        {{ form_label(form.description, null, { 'label_attr':  {
                            'class': 'col-lg-2 control-label'
                        }}) }}
                    <div class="col-lg-10">
                        {{ form_errors(form.description) }}
                        {{ form_widget(form.description, { 'attr':  {
                            'class': 'form-control'
                        }}) }}
                    </div>
                </div>
                <input type="button" name="next" class="next action-button" value="Suivant" />
            </fieldset>
            <fieldset>
                <h2 class="fs-title">Step 2: Informations additionnelles</h2>
                <div class="form-group">
                    {{ form_label(form.maintenance, null, { 'label_attr':  {
                        'class': 'col-lg-2 control-label'
                    }}) }}
                    <div class="col-lg-10">
                        {{ form_errors(form.maintenance) }}
                        {{ form_widget(form.maintenance, { 'attr':  {
                            'class': 'form-control'
                        }}) }}
                    </div>
                </div>
                <div class="form-group">
                    {{ form_label(form.lvl, null, { 'label_attr':  {
                        'class': 'col-lg-2 control-label'
                    }}) }}
                    <div class="col-lg-10">
                        {{ form_errors(form.lvl) }}
                        {{ form_widget(form.lvl, { 'attr':  {
                            'class': 'form-control'
                        }}) }}
                    </div>
                </div>
                <div class="form-group">
                    {{ form_label(form.sv, null, { 'label_attr':  {
                        'class': 'col-lg-2 control-label'
                    }}) }}
                    <div class="col-lg-10">
                        {{ form_errors(form.sv) }}
                        {{ form_widget(form.sv, { 'attr':  {
                            'class': 'form-control'
                        }}) }}
                    </div>
                </div>
                <input type="button" name="previous" class="previous action-button" value="Précédent" />
                <input type="button" name="next" class="next action-button" value="Suivant" />            </fieldset>
            <fieldset>
                <h2 class="fs-title">Step 3: Bonus générationnel</h2>
                <div id="bg-fields-list"
                     class="form-row"
                     data-prototype="{{ form_widget(form.bgs.vars.prototype)|e }}">
                </div>
                <div>
                    <button style="margin-top: 20px;" type="button"
                            class="add-bg"
                            data-list-selector="#bg-fields-list"><i class="fa fa-plus"></i></button>
                </div>
                <input type="button" name="previous" class="previous action-button" value="Précédent" />
                <input type="submit" name="submit" class="submit action-button" value="Enregistrer" />
            </fieldset>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('fieldset') }}
    {{ encore_entry_script_tags('add_bg') }}
{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('fieldset') }}
{% endblock %}