{% extends 'base.html.twig' %}
{% block title %} JTWC - Paramétrage de l'indirect bonus sur les packs de souscriptions {% endblock %}
{% block page_title %} Paramétrage de l'indirect bonus sur les packs de souscriptions {% endblock %}
{% block main %}
    <div class="col-lg-12">
        <div class="form-panel">
            {{ form_start(form, {attr: {'id': 'form', 'class': 'form-horizontal style-form'}}) }}
            <div class="form-group">
                {{ form_label(form.membership, null, { 'label_attr':  {
                    'class': 'col-lg-2 control-label'
                }}) }}
                <div class="col-lg-10">
                    {{ form_widget(form.membership, { 'attr':  {
                        'class': 'form-control' ~ (form.membership.vars.valid ? '' : 'is-invalid')
                    }}) }}
                    <div class="invalid-feedback">
                        {{ form_errors(form.membership) }}
                    </div>
                </div>
            </div>
            <div class="form-group">
                {{ form_label(form.lvl, null, { 'label_attr':  {
                    'class': 'col-lg-2 control-label'
                }}) }}
                <div class="col-lg-10">
                    {{ form_widget(form.lvl, { 'attr':  {
                        'class': 'form-control' ~ (form.lvl.vars.valid ? '' : 'is-invalid')
                    }}) }}
                    <div class="invalid-feedback">
                        {{ form_errors(form.lvl) }}
                    </div>
                </div>
            </div>
            <div class="form-group">
                {{ form_label(form.value, null, { 'label_attr':  {
                    'class': 'col-lg-2 control-label'
                }}) }}
                <div class="col-lg-10">
                    {{ form_widget(form.value, { 'attr':  {
                        'class': 'form-control' ~ (form.value.vars.valid ? '' : 'is-invalid')
                    }}) }}
                    <div class="invalid-feedback">
                        {{ form_errors(form.value) }}
                    </div>                    
                </div>
            </div>
            <div class="form-group">
                <div class="col-lg-offset-10 col-lg-2">
                    <input type="submit" name="submit" class="btn btn-theme" value="Submit" />
                </div>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}

