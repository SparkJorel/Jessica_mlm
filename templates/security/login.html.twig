<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="JTWC">
    <meta name="keyword" content="JTWC, MLM">
    <title>Jessica Total Wellness Concept - Login</title>
    <!-- Favicons -->
    <link href="{{ asset('img/favicon.png') }}" rel="icon">
    <link href="{{ asset('img/apple-touch-icon.png') }}" rel="apple-touch-icon">
    {% block stylesheets %}
    {{ encore_entry_link_tags('login') }}
    {% endblock %}
</head>
<body>
  <div id="login-page">
    <div class="container">
      <form class="form-login" method="post">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}
        <h2 class="form-login-heading">Espace membre</h2>
        <div class="login-wrap">
          <input type="text"  value="{{ last_username }}" name="_username" class="form-control" placeholder="login" required autofocus>
          <br>
          <input type="password" name="_password" class="form-control" placeholder="mot de passe" required>
          <br />
          <input type="hidden" name="_csrf_token"  value="{{ csrf_token('jtwc_signing') }}" />
          <button class="btn btn-theme btn-block" type="submit"><i class="fa fa-lock"></i>Se Connecter</button>
          <hr>
        </div>
      </form>
    </div>
  </div>
{% block javascripts %}
{{ encore_entry_script_tags('login') }}
{% endblock %}
</body>
</html>
